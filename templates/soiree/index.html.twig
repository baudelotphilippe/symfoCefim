{% extends 'base.html.twig' %}

{% block title %}Soiree index{% endblock %}

{% block body %}
    <h1>Soiree index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>DateSoiree</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soiree in soirees %}
            <tr>
                <td>{{ soiree.id }}</td>
                <td>{{ soiree.nom }}</td>
                <td>{{ soiree.description }}</td>
                <td>{{ soiree.dateSoiree ? soiree.dateSoiree|date('Y-m-d') : '' }}</td>
                <td>{{ soiree.createdAt ? soiree.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_soiree_show', {'id': soiree.id}) }}">show</a>
                    <a href="{{ path('app_soiree_edit', {'id': soiree.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_soiree_new') }}">Create new</a>
{% endblock %}
